{
  "name": "close-your-issues",
  "description": "The best module ever.",
  "version": "0.0.0",
  "author": {
    "name": "sanemat",
    "email": "ogataken@gmail.com",
    "url": "http://sane.jp"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "experimental": true
        }
      ]
    ]
  },
  "bugs": "https://github.com/sanemat/nwjs-close-your-issues/issues",
  "dependencies": {},
  "devDependencies": {
    "babel": "^4.7.16",
    "babelify": "^5.0.4",
    "browserify": "^9.0.3",
    "espower-babel": "^1.4.1",
    "jscs": "^1.12.0",
    "jshint": "^2.6.3",
    "jshint-stylish": "^0.4.0",
    "mkdirp": "^0.5.0",
    "mocha": "^2.2.1",
    "ncp": "^2.0.0",
    "node-webkit-builder": "^1.0.11",
    "onchange": "^1.0.0",
    "power-assert": "^0.10.2",
    "watchify": "^2.6.2"
  },
  "homepage": "http://sane.jp",
  "keywords": [],
  "license": "MIT",
  "main": "app/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanemat/nwjs-close-your-issues"
  },
  "scripts": {
    "build": "mkdirp app/build && NODE_ENV=production browserify -d -e ./app/js/app.js -t [ babelify --experimental ] > ./app/build/bundle.js",
    "copy": "ncp app dist",
    "dist": "npm run build && npm run copy",
    "jscs": "jscs app/**/*",
    "jshint": "jshint --reporter node_modules/jshint-stylish/stylish.js --exclude app/build/* app/**/*.js",
    "live_verify": "onchange 'app/**/*.js' '!app/build/**' 'test/**/*.js' -- npm run verify",
    "open_dist": "npm run dist && $NWJS_CMD dist/",
    "start": "$NWJS_CMD . & npm run watch & npm run live_verify",
    "test": "mocha --compilers js:babel/register --require espower-babel/guess",
    "verify": "npm run jscs && npm run jshint && npm test",
    "watch": "mkdirp app/build && ./node_modules/watchify/bin/cmd.js ./app/js/app.js -t [ babelify --experimental ] -o app/build/bundle.js -v -d"
  }
}
