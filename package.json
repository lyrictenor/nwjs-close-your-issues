  },
  "bugs": "https://github.com/sanemat/nwjs-close-your-issues/issues",
  "dependencies": {
    "pouchdb": "^3.3.1",
    "pouchdb-quick-search": "^1.1.0"
  },
  "devDependencies": {
    "babel": "^4.7.16",
    "babelify": "^5.0.4",
    "browserify": "^9.0.3",
    "espower-babel": "^1.4.1",
    "istanbul": "^0.3.13",
    "jscs": "^1.12.0",
    "jshint": "^2.6.3",
    "jshint-stylish": "^0.4.0",
    "mocha": "^2.2.1",
    "node-webkit-builder": "^1.0.11",
    "power-assert": "^0.10.2",
    "watchify": "^2.6.2"
  },
  "homepage": "http://sane.jp",
  "keywords": [],
  "license": "MIT",
  "main": "app/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanemat/nwjs-close-your-issues"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "experimental": true
        }
      ]
    ]
  },
  "scripts": {
    "watch": "./node_modules/watchify/bin/cmd.js ./app/js/app.js -o app/build/bundle.js -v -d",
    "start": "$NWJS_CMD . & npm run watch",
    "build": "NODE_ENV=production browserify -d -e ./app/js/app.js -t [ babelify --experimental ] > ./app/build/bundle.js",
    "test": "mocha --compilers js:babel/register --require espower-babel/guess",
    "verify": "npm run jscs && npm test",
    "jscs": "jscs app/**/*",
    "jshint": "jshint --reporter node_modules/jshint-stylish/stylish.js --exclude app/build/* app/**/*.js"
  }
}
